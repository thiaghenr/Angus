<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thiagohenry.tcc.CustomerActivityList"
    >

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="Pesquisa Cliente"
        android:layout_height="65dp" />


    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:stateListAnimator="@null"
        android:background="@drawable/button_mais_venda"
        android:id="@+id/new_customer"/>

    <TableRow
        android:id="@+id/row_filters"
        android:layout_width = "match_parent"
        android:layout_height = "65dp"
        android:orientation = "horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inputSearch">

        <TextView
            android:id="@+id/filters"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:text="Condição"
            android:textSize="25dp"
            android:layout_gravity=""
            android:textColor="@android:color/black"
            android:height="@dimen/activity_vertical_margin"
            android:elegantTextHeight="true"
            android:textStyle="bold"
            android:scrollHorizontally="true"/>

        <Spinner
            android:id="@+id/spinner_"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignBaseline="@id/filters"
            android:gravity="right"
            android:drawSelectorOnTop="true" />

    </TableRow>

    <ListView
        android:id="@+id/customer_list"
        android:layout_width="wrap_content"
        android:divider="#ECECEC"
        android:dividerHeight="3sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/row_filters"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>