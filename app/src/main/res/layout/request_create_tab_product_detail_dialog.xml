<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_selected"
        />

    <TextView
        android:id="@+id/quantity_product"
        android:layout_width="match_parent"
        android:ems="15"
        android:layout_below="@+id/product_selected"
        android:inputType="number"
        android:textSize="30dp"
        android:hint="quantity"
        android:layout_height="65dp" />

    <TextView
        android:id="@+id/price_product"
        android:layout_width="match_parent"
        android:ems="15"
        android:layout_below="@+id/quantity_product"
        android:inputType="number"
        android:textSize="30dp"
        android:hint="price"
        android:layout_height="65dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_product"
        android:id="@+id/add_product_dialog"
        android:text="Add Product"/>



</RelativeLayout>