<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thiagohenry.tcc.ProductActivityList"
    >

    <EditText
        android:id="@+id/inputSearch_product"
        android:layout_width="match_parent"
        android:ems="15"
        android:inputType="textPersonName"
        android:textSize="30dp"
        android:hint="Pesquisa Producto"
        android:layout_height="65dp" />

    <TableRow
        android:id="@+id/row_filters"
        android:layout_width = "match_parent"
        android:layout_height = "65dp"
        android:orientation = "horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inputSearch_product">

        <Switch
            android:id="@+id/filter_by_name_product"
            android:layout_width="108dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="13dp"
            android:checked="true"
            android:paddingLeft="10dp"
            android:text="Nome"
            android:textScaleX="1.2"
            android:textSize="13dp" />

        <Switch
            android:id="@+id/filter_by_brand"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginStart="13dp"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="Marca"
            android:textScaleX="1.2"
            android:textSize="14sp"
            android:thumbTextPadding="4dp" />

        <Switch
            android:id="@+id/filter_by_category"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginStart="16dp"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="CategorÃ­a"
            android:textScaleX="1.1"
            android:textSize="10sp"
            android:thumbTextPadding="4dp" />

    </TableRow>

    <ListView
        android:id="@+id/products_list"
        android:layout_width="wrap_content"
        android:divider="#ECECEC"
        android:dividerHeight="3sp"
        android:layout_height="180dp"
        android:layout_below="@+id/row_filters"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/separator_list_product"
        android:layout_below="@+id/products_list"
        android:background="@android:color/transparent"
        ></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrito"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/title_item_request_selected"
        android:layout_below="@id/separator_list_product"/>

    <ListView
        android:id="@+id/products_selected2"
        android:layout_width="wrap_content"
        android:divider="#ECECEC"
        android:dividerHeight="3sp"
        android:layout_height="180dp"
        android:layout_below="@+id/title_item_request_selected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>

</RelativeLayout>