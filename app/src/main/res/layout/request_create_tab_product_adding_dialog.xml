<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/quantity_product_selected"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="15"
        android:hint="Cantidad"
        android:inputType="number"
        android:textColorHint="@color/colorPrimary"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/price_product_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:inputType="numberDecimal"
        android:textColorHint="@color/colorPrimary"
        android:textSize="30dp" />


    <Button
        android:id="@+id/add_product_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_product"
        android:shadowColor="@color/cardview_light_background"
        android:text="Add Product"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/cardview_light_background" />

</LinearLayout>