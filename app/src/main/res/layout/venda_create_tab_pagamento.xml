<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    android:orientation="vertical" >

    <TextView
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:text="G$ 15.000.000"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:height="@dimen/activity_vertical_margin"
        android:elegantTextHeight="true"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginRight="1dp"
        android:scrollHorizontally="true" />

    <TableRow
        android:id="@+id/row_condicao"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

        <TextView
        android:id="@+id/pag_condi"
        android:layout_height="50dp"
        android:layout_width="230dp"
        android:text="Condição"
        android:textSize="25dp"
        android:layout_gravity=""
        android:textColor="@android:color/black"
        android:height="@dimen/activity_vertical_margin"
        android:elegantTextHeight="true"
        android:textStyle="bold"
        android:scrollHorizontally="true"/>

        <Spinner
        android:id="@+id/spinner_condicao"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignBaseline="@id/pag_condi"
        android:gravity="right"
        android:drawSelectorOnTop="true" />

    </TableRow>

    <TableRow
        android:id="@+id/row_fatura"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

        <TextView
            android:id="@+id/pag_fatura"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:text="Condição"
            android:textSize="25dp"
            android:layout_gravity=""
            android:textColor="@android:color/black"
            android:height="@dimen/activity_vertical_margin"
            android:elegantTextHeight="true"
            android:textStyle="bold"
            android:scrollHorizontally="true"/>

        <Spinner
            android:id="@+id/spinner_fatura"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignBaseline="@id/pag_fatura"
            android:gravity="right"
            android:drawSelectorOnTop="true" />

    </TableRow>

    <TextView
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:text="Previsão"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:height="@dimen/activity_vertical_margin"
        android:elegantTextHeight="true"
        android:textStyle="bold"
        android:scrollHorizontally="true" />

